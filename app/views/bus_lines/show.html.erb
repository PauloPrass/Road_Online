  <div class="container_title">
    <div class="div_title_i">
      <h1>Linha</h1>
    </div>
  </div>

  <p>
    <strong>Code:</strong>
    <%= @bus_line.code %>

    <strong>Name:</strong>
    <%= @bus_line.name %>
  </p>

  <div class="container_title">
      <div class="div_title_i">
          <h1>Itiner√°rios</h1>
