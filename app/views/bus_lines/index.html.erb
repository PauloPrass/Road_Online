<p id="notice"><%= notice %></p>

<div class="container">

  <div class="container_title">
        <div class="div_title">
            <h1>Linhas de Ônibus</h1>
        </div>

        <form class="div_title" action="/bus_lines/" method="get">
            <input style="margin:5px" type="text" name="filter">
            <button type="submit" style="margin:5px" class="btn btn-success"><i class="fas fa-search"></i></button>
        </form>
    </div>

  <table class="table table-dark">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_lines.each do |bus_line| %>
      <tr>
        <td><%= bus_line.code %></td>
        <td><%= bus_line.name %></td>
        <td><%= link_to 'Visualizar Itinerários', bus_line %></td>
        <td><%= link_to 'Editar', edit_bus_line_path(bus_line) %></td>
        <td><%= link_to 'Excluir', bus_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <button type="button" class="btn btn-dark">
    <%= link_to 'Nova linha', new_bus_line_path %>
  </button>
</div>